<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/newform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newform"
            android:layout_above="@+id/reviewform"
            android:layout_alignLeft="@+id/sendform"
            android:layout_alignStart="@+id/sendform" />

        <Button
            android:id="@+id/reviewform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@drawable/review"
            android:layout_marginStart="80dp"
            android:layout_above="@+id/mpowermain"
            android:layout_toRightOf="@+id/newform"
            android:layout_toEndOf="@+id/newform" />

        <Button
            android:id="@+id/downloadform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/download"
            android:layout_below="@+id/mpowermain"
            android:layout_alignRight="@+id/reviewform"
            android:layout_alignEnd="@+id/reviewform" />

        <Button
            android:id="@+id/sendform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/send"
            android:layout_below="@+id/downloadform"
            android:layout_alignRight="@+id/mpowermain"
            android:layout_alignEnd="@+id/mpowermain" />

        <Button
            android:id="@+id/deleteform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete"
            android:layout_below="@+id/mpowermain"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="81dp"
            android:layout_marginStart="81dp" />

        <LinearLayout
            android:id="@+id/mpowermain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        </LinearLayout>

        <Button
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/table"
            android:layout_alignTop="@+id/reviewform"
            android:layout_alignLeft="@+id/deleteform"
            android:layout_alignStart="@+id/deleteform" />

    </RelativeLayout>

</FrameLayout>
