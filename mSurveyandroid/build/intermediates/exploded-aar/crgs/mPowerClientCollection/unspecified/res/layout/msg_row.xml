<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_list_row"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="6dp" >

    <TextView
        android:id="@+id/msg_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/msg_sender"
        android:layout_alignTop="@+id/msg_sender"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/msg_message"
        android:layout_alignBottom="@+id/msg_message"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/msg_message"
        android:gravity="right"
        android:text="_/_/_"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/msg_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_sender"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:text="Message"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#1569C7" />

    <TextView
        android:id="@+id/msg_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/msg_message"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:ellipsize="end"
        android:text="Sender"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/msg_message"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/msg_sender"
        android:contentDescription="@string/human"
        android:src="@drawable/human" />

</RelativeLayout>